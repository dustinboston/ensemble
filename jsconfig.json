{
	"compilerOptions": {
		"strict": true,
		"checkJs": true,
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"newLine": "lf",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"./types/*.d.ts",
		"./**/*.js",
	],
	"exclude": [
		"node_modules"
	]
}